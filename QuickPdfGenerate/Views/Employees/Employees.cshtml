
@{
    ViewData["Title"] = "Employee List";
}

<button id="btnPrint" class="btn btn-primary ignoreForPdf">Print</button>
<br />
<br />
<table id="tblEmployee" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Salary</th>
            <th>Designation</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>

<script src="~/js/jquery/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function (){
        $.getJSON("../Employees/GetEmployees", function(employees){
            $.map(employees, function(emp){
                $("#tblEmployee tbody").append("<tr><td>" + emp.name + "</td><td>" + emp.salary +"</td><td>" + emp.designation +"</td></tr>")
            });
        });

        $("#btnPrint").click(function(){
            $(".ignoreForPdf").hide();
            window.print();
            $(".ignoreForPdf").show();
        });
    });
</script>
